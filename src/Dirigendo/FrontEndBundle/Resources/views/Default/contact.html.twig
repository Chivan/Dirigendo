{% extends "DirigendoFrontEndBundle::layout.html.twig" %}
{% form_theme form 'DirigendoFrontEndBundle:Form:dirigendo_form.html.twig' %}
{% block title %}{{ content.Title }}{% endblock %}
{% block description %}{{content.Description}}{% endblock %}
{% block keywords %}{{content.Keywords}}{% endblock %}
{% block javascripts %}
{{ parent() }} 
<script type="text/javascript" src="{{ asset('bundles/bazingaexposetranslation/js/translator.min.js') }}"></script>
<script type="text/javascript" src="{{ url('bazinga_exposetranslation_js', { 'domain_name': 'validators', '_locale' : 'nl' }) }}"></script>
{{ JSFV(form) }}
{% endblock %}
{% block white_content %}
<div style="width: 960px;">
    <div id="left-content-box" style="width: 470px; margin-top: 10px; margin-bottom: 20px;">
               {% include template_from_string(content.ContentLeft) %}
        </div>
        <div id="right-content-box" style="width: 470px; margin-top: 10px;">

            <form novalidate="true" action="{{ path('_contact') }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}

                    <input type="submit" value="Verzenden" />
                </form>
            </div>
            <div class="clear"></div>
        </div>
{% endblock %}
{% block gray_content %}
{% render "DirigendoFrontEndBundle.ServiceTilesController:serviceTilesAction" %}
{% endblock %}